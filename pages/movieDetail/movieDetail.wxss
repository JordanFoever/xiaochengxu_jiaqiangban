/* 视频部分的样式 */
.prism-player{
    background-color: #000;
    position: relative;
    width: 100%;
    height: 468rpx;
}
 video{
    position: absolute;
    transform-origin: center;
    /* 当视频大小与 video 容器大小不一致时，视频的表现形式 */
    object-fit: contain;
} 

