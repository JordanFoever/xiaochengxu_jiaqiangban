
/* 顶部导航 */
page{
    width: 100%;
    height: 100%;
    margin: 0;
    padding: 0;
    background-color: #f5f6f8;
    color: inherit;
    font-size: 30rpx;
    line-height: 1.5;
    font-family: Chinese Quote,Segoe UI,Roboto,PingFang SC,Hiragino Sans GB,Microsoft YaHei,Helvetica Neue,Helvetica,Arial,sans-serif;
    box-sizing:border-box;
    position: relative;
}
.nav
{
	display: flex;
    align-items: center;
    justify-content: space-between;
    padding-right: 5.8666667vw;
    margin-bottom: 3.2vw;
    background-color: #ffffff;  
}

.city-c{
    display: flex;
    align-items: center;
}
.current-city{
    display: flex;
    align-items: center;
    height: 9.6vw;
    padding: 0 3.2vw;
    position: relative;
}

.i-logo{
    width: 5.6vw;
    height: 5.6vw;
    margin-right: .8vw;
    background-repeat: no-repeat;
    background-size: 100% 100%;
    background-image: url(//gw.alicdn.com/tfs/TB1mKkzl9zqK1RjSZFpXXakSXXa-50-50.svg);
}
/* 左边 */
.nav_right{
    height: 10.4vw;
    display: flex;
    /* flex-wrap: nowrap;
    justify-content: flex-start; */
    align-items: center;
    position: relative;
    overflow-x: scroll;
}
.nav_right view{
    box-sizing: border-box;
    padding-bottom: 10rpx;
}
.nav_right view:nth-child(2){
    margin-left: 30rpx;
}
