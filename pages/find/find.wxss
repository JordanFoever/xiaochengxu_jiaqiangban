page{
    width: 100vw;
    height: 100vw;
    background-color: #ffffff;
}
.content{
    width: 100%;    
    height: 152rpx;
    /* padding:28rpx 32rpx; */
    padding: 4vw;
    border-top: 1px solid #f0f0f0;
    display: flex;
}
image{
    width: 20vw;
    height: 100%;
}
.content .wei_content{    
    margin-left: 4vw;
    box-sizing: border-box;
    box-sizing: content-box;
    width: 68vw;
    /* background-color: red; */
}
.content .wei_content .wei_top{
    margin-bottom: 22rpx;
    font-size: 36rpx;
    color: #333;
    font-weight: normal;
    
    position: relative;
    overflow: hidden;
    line-height: 50rpx;
    height: 100rpx;  

    font-family :Arial, Helvetica, sans-serif;
    font-size: 36rpx;
}
.content .wei_content .wei_top::after{
    bottom: 0;
    content: "...";
    padding: 0 5px 1px 30px;
    position: absolute;
     right: 0;
}
.content .wei_content .wei_buttom{
    text-align: left;
    width: 100%;
    overflow: hidden;
    color: rgb(153, 153, 153);
    font-size: 26rpx;
}


